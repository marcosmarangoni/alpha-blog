<!-- If there are any errors -->
<% if @article.errors.any? %>
  <h2 style="color: darkred">The following errors prevented the article from being created</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li style="color: darkred"><%= msg %></li>
    <% end %>
  </ul>
<% end  %>

<div class="row">
  <div class="col-xs-12">

    <%= form_for(@article, :html => { class: "form-horizontal", role: "form" }) do |f| %>
      <!-- Title form -->
      <div class="form-group">
        <%= f.label :title, class: 'control-label col-sm-2' %>
        <div class="col-sm-8">
          <%= f.text_field :title, class: 'form-control', placeholder: "Title of the article", autofocus: true %>
        </div>
      </div>

      <!-- Description form -->
      <div class="form-group">
        <%= f.label :description, class: 'col-sm-2 control-label' %>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 10, class: 'form-control', placeholder: "Body of the article" %>
        </div>
      </div>
      <!-- Submit button -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>

  </div>
</div>

<div class="col-xs-offset-4 col-xs-4">
  [ <%= link_to "Cancel request and back to the list of articles", articles_path %> ]
</div>