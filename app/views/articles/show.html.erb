<h2 align="center">Title: <%= @article.title %></h2>

<% if @article.user %>
  <ul class="listing">
    <div class="center row">
      <div class="col-md-4 col-md-offset-4">
        <li><%= link_to gravatar_for(@article.user, size: 100), user_path(@article.user) %></li>
        <li class="article-title">
          <%= link_to @article.user.username, user_path(@article.user) %>
        </li>
        <li>
          <small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small>
        </li>
      </div>
    </div>
  </ul>
<% end %>

<div class="well col-xs-8 col-xs-offset-2">
  <h4 class="center description"><strong>Description</strong></h4>
  <hr>
  <%= simple_format(@article.description) %>
  <div class="article-actions">
    <% edit = true, delete = true, index = true %>
    <%= link_to("Edit this article", edit_article_path(@article), class: "btn btn-xs btn-primary") %>
    <%= link_to("Delete this article", article_path(@article),
                method: :delete,
                data: {confirm: "Are you sure you want to delete this articles?"},
                class: "btn btn-xs btn-danger") %>
    <%= link_to("View all articles", articles_path, class: "btn btn-xs btn-success") %>
  </div>
</div>