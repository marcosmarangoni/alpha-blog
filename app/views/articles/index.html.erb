<h1>Listing all the articles</h1>
<p>
  <%= link_to "Create a new article", new_article_path %>
</p>

<table style="border: 1px solid black">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Remove</th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= link_to "Show", article_path(article.id) %></td>
      <td><%= link_to "Edit", edit_article_path(article.id) %></td>
      <td><%= link_to "Remove", article_path(article.id), method: :delete %></td>
    </tr>
  <% end %>
</table>