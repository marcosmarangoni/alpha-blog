<h1>Edit existing article</h1>

<!-- If there are any errors -->
<% if @article.errors.any? %>
  <h2 style="color: darkred">The following errors prevented the article from being created</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li style="color: darkred"><%= msg %></li>
    <% end %>
  </ul>
<% end  %>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<p><%= link_to "Back to the list of articles", articles_path %></p>